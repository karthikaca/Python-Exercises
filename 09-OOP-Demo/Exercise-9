# Creating class
class House:
  # Defining init method with its parameter
	def __init__(self, price):
		self._price = price
  # property decorator
	@property
  # Getter method
	def price(self):
		return self._price
	# Setter method
	@price.setter
	def price(self, new_price):
		if new_price > 0 and isinstance(new_price, float):
			self._price = new_price
		else:
			print("Please enter a valid price")

	@price.deleter
	def price(self):
		del self._price
